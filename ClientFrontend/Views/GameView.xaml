<Window x:Class="ClientFrontend.Views.GameView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:ClientFrontend.Views"
        mc:Ignorable="d"
        Title="GameView" Height="830" Width="1280">
    <Grid>
        <Grid
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock 
                Grid.Row="0"
                Style="{StaticResource PlainText}">
                Лучшее создание на Земле это:
            </TextBlock>
            <StackPanel 
                Grid.Row="1"
                Orientation="Horizontal"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <Border Style="{StaticResource EmptyCell}"/>
                <Border Style="{StaticResource EmptyCell}"/>
                <Border Style="{StaticResource EmptyCell}"/>
                <Border Style="{StaticResource EmptyCell}"/>
                <Border Style="{StaticResource EmptyCell}"/>
            </StackPanel>
            <TextBlock 
                Grid.Row="2"
                Style="{StaticResource PlainText}">
                Ваш ход
            </TextBlock>
            <Button 
                Grid.Row="3" 
                Style="{DynamicResource RoundButton}"
                Click="OpenLetter">
                открыть букву
            </Button>
            <Button 
                Grid.Row="4" 
                Style="{DynamicResource RoundButton}"
                Click="OpenWord">
                открыть слово
            </Button>
        </Grid>
        <Rectangle x:Name="Overlay" Fill="#AA000000" Opacity="0.0"/>
        <Button 
            x:Name="ChatButton"
            Style="{StaticResource ChatButton}"
            Click="ChatButton_Click">
        </Button>
        <DockPanel 
            x:Name="ChatPanel" 
            HorizontalAlignment="Left"
            Background="#FFFFFF"
            Width="0">
            <TextBlock 
                Style="{StaticResource PlainText}" 
                TextWrapping="NoWrap">
                Борис
            </TextBlock>
        </DockPanel>
    </Grid>
    <Window.Triggers>
        <EventTrigger RoutedEvent="MouseDown">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetName="ChatPanel"
                                     Storyboard.TargetProperty="Width"
                                     To="0" Duration="0:0:0.3"/>
                    <DoubleAnimation Storyboard.TargetName="Overlay"
                                     Storyboard.TargetProperty="Opacity"
                                     From="0.5" To="0.0" Duration="0:0:0.3"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
        <EventTrigger RoutedEvent="Button.Click" SourceName="ChatButton">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetName="ChatPanel"
                                     Storyboard.TargetProperty="Width"
                                     To="450" Duration="0:0:0.3"/>
                    <DoubleAnimation Storyboard.TargetName="Overlay"
                                     Storyboard.TargetProperty="Opacity"
                                     From="0.0" To="0.5" Duration="0:0:0.3"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>
</Window>
